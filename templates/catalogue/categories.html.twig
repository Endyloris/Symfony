{% extends 'base.html.twig' %}

{% block title %}Catalogue des Catégories{% endblock %}

{% block body %}
<h1>Nos Catégories</h1>

<div class="row">
    {% for categorie in categories %}
    <div class="col-md-4">
        <div class="card mb-4 shadow-sm">
            <img src="{{ asset(categorie.image) }}" class="card-img-top" alt="{{ categorie.libelle }}">
            <div class="card-body">
                <h5 class="card-title">{{ categorie.libelle }}</h5>
                <a href="{{ path('catalogue_plats_by_categorie', {'categorie_id': categorie.id}) }}" class="btn btn-primary">Voir les plats</a>
            </div>
        </div>
    </div>
    {% endfor %}
</div>
{% endblock %}
