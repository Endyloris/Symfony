{% extends 'base.html.twig' %}

{% block title %}Plats de la Catégorie {{ categorie.libelle }}{% endblock %}

{% block body %}
<h1>Plats de la Catégorie {{ categorie.libelle }}</h1>

<div class="row">
    {% for plat in plats %}
    <div class="col-md-4">
        <div class="card mb-4 shadow-sm">
            <img src="{{ asset(plat.image) }}" class="card-img-top" alt="{{ plat.libelle }}">
            <div class="card-body">
                <h5 class="card-title">{{ plat.libelle }}</h5>
                <p class="card-text">{{ plat.description }}</p>
                <p class="card-text"><strong>{{ plat.prix }} €</strong></p>
                <form method="post" action="{{ path('commande_process', {'id': plat.id}) }}">
                    <button type="submit" class="btn btn-primary">Commander</button>
                </form>
            </div>
        </div>
    </div>
    {% endfor %}
</div>
{% endblock %}
